<div class="col-md-6 col-md-offset-3">

<h1>Sign-Up as a New User</h1>
<h1>views/users/new.html.erb</h1>

<%= simple_form_for @user do |f| %>
  <%= f.input :user_name %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation, label: "Password Confirmation" %>
  <%= f.submit "Sign Up" %>
<% end %>
</div>
