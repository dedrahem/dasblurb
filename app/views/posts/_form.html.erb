<% if @post.errors.any? %>
  <% @post.errors.full_messages.each do |error| %>
    <p class="alert alert-danger"><strong><%= error %></strong></p>
  <% end %>
<% end %>

<%= form_for @post do |f| %>


  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_field :postbody, class: "form-control" %>
    </div>

  <div class="form-group">
    <%= f.label :user %>
    <!-- <#%= f.collection_select :id, User.all, :id, :user_name, {prompt: true},  {class: "form-control"} %> -->
  </div>

  <div class="">
    <%= f.submit class: "btn btn-primary" %>
  </div>

<% end %>
